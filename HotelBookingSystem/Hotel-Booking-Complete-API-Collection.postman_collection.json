{
  "info": {
    "name": "Hotel Booking System API - Mock Auth Collection",
    "description": "API collection with mock authentication for development and testing",
    "version": "2.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "booking_service_url",
      "value": "http://localhost:5002",
      "type": "string"
    },
    {
      "key": "analytics_service_url",
      "value": "http://localhost:5004",
      "type": "string"
    },
    {
      "key": "api_gateway_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "mock_token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{mock_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Mock Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    // Handle both Token and token property names",
                  "    const token = response.Token || response.token;",
                  "    if (token) {",
                  "        pm.collectionVariables.set('mock_token', token);",
                  "        console.log('Mock Token saved:', token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{api_gateway_url}}/api/auth/mock-login",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "auth", "mock-login"]
            },
            "description": "Mock authentication login - accepts any email and name"
          }
        },
        {
          "name": "Get User Info",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{mock_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_gateway_url}}/api/auth/user-info",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "auth", "user-info"]
            },
            "description": "Get current user information using mock token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{mock_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{api_gateway_url}}/api/auth/logout",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout user (mock implementation)"
          }
        }
      ]
    },
    {
      "name": "API Gateway - Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_gateway_url}}/api/customers",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "customers"]
            },
            "description": "Get all customers via API Gateway (no authentication required)"
          }
        },
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"gateway-customer@example.com\",\n  \"firstName\": \"Gateway\",\n  \"lastName\": \"Customer\",\n  \"phoneNumber\": \"+1234567890\",\n  \"address\": \"123 Gateway Street, API City\"\n}"
            },
            "url": {
              "raw": "{{api_gateway_url}}/api/customers",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "customers"]
            },
            "description": "Create customer via API Gateway (no authentication required)"
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_gateway_url}}/api/customers/{{customer_id}}",
              "host": ["{{api_gateway_url}}"],
              "path": ["api", "customers", "{{customer_id}}"]
            },
            "description": "Get customer by ID via API Gateway (no authentication required)"
          }
        }
      ]
    },
    {
      "name": "API Gateway - Rooms",
      "item": [
        {
          "name": "Get All Rooms (Public)",
          "request": {
            "method": "GET",
            "header": [],
